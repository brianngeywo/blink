<div class="lg:hidden">
<%= render "layouts/top_nav" %>
<%= form_for @town do |f| %>
  <div class="bg-gray-300 text-4xl p-4">
    <div class="capitalize font-bold text-6xl">add new town</div>
        <%= f.text_field :name, placeholder: "town name", class: "m-4 p-2 rounded-lg" %>
