<div class="lg:hidden">
    <div class="bg-teal-700 py-4 text-4xl text-white">
        <div class="px-6"><i class="fa fa-chevron-left mr-6"></i><%= link_to "#{@town.name}", rentals_path %></div>
    </div>
    <p class="font-semibold text-gray-600 uppercase text-2xl ml-12 mt-4">list of rentals in eldoret</p>
    <div class="">
        <% @town.rentals.each do |rental| %>
            <div class="border-t border-b border-gray-600 my-1 py-2">
                <div class="flex space-x-12 items-center my-4 px-12">
                    <div>
                        <% if rental.user.profile_picture.attached? %>
                            <%= image_tag rental.user.profile_picture, class:"rounded-full object-cover object-center border-2 border-gray-900 h-24 w-24" %>
                        <% end %>
                    </div>
                    <div>
                        <div class="text-3xl text-teal-700 font-medium uppercase"><%= link_to rental.user.username, user_path(rental.user) %></div>
                        <div class="text-2xl font-medium uppercase"><i class="fa fa-map-marker-alt text-teal-700 mx-2"></i><%= link_to rental.town.name, town_path(rental.town) if rental.town %>,<%= link_to rental.estate.name, estate_path(rental.estate) if rental.estate  %></div>
                    </div>
                </div>
                <div class="bg-white">
                    <%= link_to rental_path(rental) do %> 
                        <div class="rounded-lg pb-10 bg-white shadow-b shadow-r shadow-3xl">
                            <% if rental.cover_image.attached? %>
                                <%= image_tag rental.cover_image, class:"rounded-b rounded-lg object-cover bg-no-repeat w-full h-74" %>
                            <% end %>
                            <div class="text-5xl pt-4 uppercase font-seimbold px-12"><%= rental.name  %></div>
                            <div class="">
                                <div class="text-4xl px-6"><i class="fa fa-bed text-teal-700 mx-2"></i><%= rental.bedrooms %> rooms</div>
                                <div class="text-4xl px-6 py-2 capitalize">kshs <%= rental.price %></div>
                            </div>
                        </div>  
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>
<div class="sm:hidden lg:block">
    <div class="bg-white">
        <%= render 'layouts/desktop_nav' %>
    </div>
    <div class="">
        <div class="flex text-base space-x-3 py-4 px-6 uppercase text-gray-700 font-medium">
            <div>rentals in kenya</div>
            <div>></div>
            <div><%= @town.name %></div>
        </div>
        <div class="bg-cover bg-center pt-8 w-full" style="background-image: url(https://images.unsplash.com/photo-1543245883-b631737145f0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);background-color: rgba(14, 0, 0, 0.564);background-blend-mode:multiply;">
            <div class="text-2xl text-gray-300 my-12 mx-20">
                <div class="text-4xl text-teal-600 font-semibold capitalize py-4"><%= @town.name %> town</div>
            </div>
        </div>
    </div>
    <div class="flex my-2 mx-24 space-x-6 items-center justify-left w-full">
        <% @town.estates.all.each do |estate| %>
            <%= content_tag(:div, class: '') do %>
                <%= link_to estate.name, estate_path(estate), :class => 'bg-teal-700 text-white capitalize py-2 px-3 rounded-l-full rounded-r-full' -%>
            <% end %>
        <% end %>
    </div>
    <div class="flex space-x-4 mx-16 p-6">
        <div class="mx-2 shadow-3xl px-6 py-4 font-semibold capitalize rounded-lg h-auto">
            <div class="my-3 text-teal-700">offices:
                <div class="font-normal text-black">10th Floor Fortis Tower</div>
                <div class="font-normal text-black">Woodvale Grove, Westlands</div>
            </div>
            <div class="my-3 text-teal-700">contacts:
                <div class="font-normal text-black">0798767470</div>
            </div>
            <div class="my-3 text-teal-700">email:
                <div class="font-normal normal-case text-black">brianngeywo@gmail.com</div>
            </div>
            <div class="font-semibold normal-case text-teal-700">
                <% if logged_in? && current_user.admin? %>
                    <div><%= link_to 'edit town', edit_town_path , class:""%></div>       
                <% end %>
            </div>
        </div>
        <div class="w-full">
            <%= render 'rentals/town_rentals', obj: @town.rentals %>
        </div>
    </div>
    <footer>
        <%= render 'layouts/desktop_footer' %>
    </footer>
</div>