<div class="lg:hidden">
    <%= render 'layouts/mobile_nav' %>
        <div class="bg-cover bg-center bg-no-repeat w-full h-74" style="background-blend-mode: multiply; background: rgba(28, 40, 43, 0.185); background-image: url('../assets/slide-1.jpg');">
        </div>
        <div class="font-bold text-7xl capitalize mx-4">
            <%= @town.name %>
        </div>
        <% if logged_in? && current_user.admin? %>
            <div class="p-6 capitalize text-5xl mx-6">
                <div class="my-4">
                    <%= link_to 'delete town', town_path, method: :delete %>
                </div>
                <div class="my-4">
                    <%= link_to 'edit town', edit_town_path %>
                </div>
            </div>
            <% end %>
                <div class="bg-gray-100 p-24 mb-16">
                    <%= render 'estates/estate', obj: @town.estates %>
                </div>
                <%= render 'layouts/mobile_footer' %>
</div>
<div class="sm:hidden lg:block">
    <div class="bg-white">
        <%= render 'layouts/desktop_nav' %>
    </div>
    <div class="">
        <div class="flex text-base space-x-3 py-4 px-6 uppercase text-gray-700 font-medium">
            <div>rentals in kenya</div>
            <div>></div>
            <div><%= @town.name %></div>
        </div>
        <div class="bg-cover bg-center pt-8 w-full" style="background-image: url(https://images.unsplash.com/photo-1543245883-b631737145f0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);background-color: rgba(14, 0, 0, 0.564);background-blend-mode:multiply;">
            <div class="text-2xl text-gray-300 my-12 mx-20">
                <div class="text-4xl text-teal-600 font-semibold capitalize py-4"><%= @town.name %> town</div>
            </div>
        </div>
    </div>
    <div class="flex my-2 mx-24 space-x-6 items-center justify-left w-full">
        <% @town.estates.all.each do |estate| %>
            <%= content_tag(:div, class: '') do %>
                <%= %>
                <%= link_to estate.name, estate_path(estate), :class => 'bg-teal-700 text-white capitalize py-2 px-3 rounded-l-full rounded-r-full' -%>
            <% end %>
        <% end %>
    </div>
    <div class="flex space-x-4 mx-16 p-6">
        <div class="mx-2 shadow-3xl px-6 py-4 font-semibold capitalize rounded-lg h-auto">
            <div class="my-3 text-teal-700">offices:
                <div class="font-normal text-black">10th Floor Fortis Tower</div>
                <div class="font-normal text-black">Woodvale Grove, Westlands</div>
            </div>
            <div class="my-3 text-teal-700">contacts:
                <div class="font-normal text-black">0798767470</div>
            </div>
            <div class="my-3 text-teal-700">email:
                <div class="font-normal normal-case text-black">brianngeywo@gmail.com</div>
            </div>
        </div>
        <div class="w-full">
            <%= render 'rentals/town_rentals', obj: @town.rentals %>
        </div>
    </div>
    <footer>
<%= render 'layouts/desktop_footer' %>
    </footer>
</div>