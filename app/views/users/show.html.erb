<div class="lg:hidden">
    <%= render 'layouts/mobile_nav' %>
    <div class="font-bold text-6xl capitalize mx-4">welcome</div>
    <div>
        <% if @user.profile_picture.attached? %>
            <%= image_tag @user.profile_picture, class:"h-32 object-cover" %>
        <% end %>
    </div>
    <% if logged_in? && current_user.admin? %>
    <%= link_to 'all bookings', bookings_path , class:"text-5xl font-bold capitalize my-6 p-4 text-teal-700"%>
    <%= link_to 'all users', users_path , class:"text-5xl font-bold capitalize my-6 p-4 text-teal-700"%>
    <% end %>
    <br>
        <% if logged_in? && (current_user == @user || current_user.admin?) %>
    <div class="text-5xl font-bold capitalize mx-4"><%= link_to 'new rental', new_rental_path %></div>
    <div class="font-bold text-5xl capitalize mx-4 my-3">
        <%= link_to 'edit your account', edit_user_path(current_user) %></div>
    <% end %>
    <% if logged_in? && current_user.admin? %>
    <button class="rounded-lg font-bold text-5xl bg-red-700 capitalize mx-4 text-white px-6"><%= link_to 'delete your account', user_path, method: :delete, data: { confirm: 'Are you sure you want to delete your account and remove all listings linked to this account?' } %></button>
    <% end %>
    <div class="px-6 capitalize text-5xl mx-6">
        <div class="font-bold">all rentals by <%= @user.username %></div>
        <%= render 'rentals/rental', obj: @user.rentals %>
    </div>
    <%= render 'layouts/mobile_footer' %>
</div>
