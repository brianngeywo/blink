<div class="lg:hidden">
    <%= render 'layouts/mobile_nav' %>
    <div  class="px-6 font-bold text-7xl capitalize mx-4"><%= @estate.name %></div>
    <div class="px-4 capitalize text-5xl mx-6">
        <div class="my-3"><%= link_to @estate.town.name, towns_path(@town) if @estate.town %> town</div>
    </div>
    <% if logged_in? && current_user.admin? %>
        <div class="p-6 capitalize text-5xl mx-6">
            <div class="my-4"><%= link_to 'delete estate', estate_path, method: :delete %></div>
            <div class="my-4"><%= link_to 'edit estate', edit_estate_path %></div>
        </div>
    <% end %>
    <div class="bg-gray-100 p-24 mb-16">
        <%= render 'rentals/rental', obj: @estate.rentals %>
    </div>
    <%= render 'layouts/mobile_footer' %>
</div>