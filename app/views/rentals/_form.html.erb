<%= form_for @rental do |f| %>

<% if @rental.errors.any? %>
    <% @rental.errors.full_messages.each do |msg|%>%
        <div><%= msg %></div>
    <% end %>
<% end %>

  <div class="bg-gray-300 text-4xl p-4 mb-32">
        <div class="flex items-center">
            <div class="capitalize w-1/2">property name</div>  
            <%= f.text_field :name, placeholder: "property name", class: "my-6 p-2 rounded-lg" %>
        </div>
        <div class="flex">
            <div class="capitalize my-4 w-1/2">town:</div>
            <select name="rental[town_id]" class="my-6 p-4 text-center bg-teal-700 text-white">
                <% Town.all.each do |town| %>
                    <option value="<%= town.id %>"><%= town.name %></option>
                <% end %>
            </select>
        </div>
        <div class="flex">
            <div class="capitalize my-4 w-1/2">estate:</div>
            <select name="rental[estate_id]" class="my-6 p-4 text-center bg-teal-700 text-white">
                <% Estate.all.each do |estate| %>
                    <option value="<%= estate.id %>"><%= estate.name %></option>
                <% end %>
            </select>
        </div>
        <div class="flex items-center">
            <div class="capitalize w-1/2">monthly payment</div>
            <%= f.text_field :price, placeholder: "price per month", class: "my-6 p-2 rounded-lg" %>
        </div>
        <div class="flex items-center">
            <div class="capitalize w-1/2">number of units</div>
            <%= f.text_field :units, placeholder: "units", class: "my-6 p-2 rounded-lg" %>
        </div>
        <div class="flex items-center">
            <div class="capitalize w-1/2">number of bedrooms</div>
            <%= f.text_field :bedrooms, placeholder: "bedrooms", class: "my-6 p-2 rounded-lg" %>
        </div>
        <div class="flex items-center">
            <div class="capitalize w-1/2">number of bathrooms</div>
            <%= f.text_field :bathrooms, placeholder: "bathrooms", class: "my-6 p-2 rounded-lg" %>
        </div>
        <div class="flex items-center">
            <div class="capitalize w-1/2">car space</div>
            <%= f.text_field :parking, placeholder: "E.g 2", class: "my-6 p-2 rounded-lg" %>
        </div>
        <div class="flex items-center">
            <div class="capitalize w-1/2">is wi-fi available?</div>
            <%= f.text_field :wifi, placeholder: "yes or no", class: "my-6 p-2 rounded-lg" %>
        </div>
        <div class="capitalize">features</div>
        <div class="px-4 grid grid-cols-3">>
        </div>
        <div class="capitalize">cover photo</div>
            <%= f.file_field :cover_image %>
        <div class="capitalize">rental photos</div>
            <%= f.file_field :photos, multiple: true %>
            <br>
        <div class="capitalize">additional information</div>
        <%= f.text_area :description, :cols => 30, :rows => 7, placeholder: "please add any infor that would be usefull", class: "my-6 p-2 rounded-lg w-full" %>
        <%= f.submit "Submit", disable_with: "Submiting...", class: "bg-gray-900 text-white font-semibold p-4 my-4 capitalize rounded-lg" %>
        </div>
<% end %>